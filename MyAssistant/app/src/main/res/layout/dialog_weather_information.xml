<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/city_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="City Name"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/dialog_weatherIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/city_name_dialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_weather_rain" />

    <TextView
        android:id="@+id/dialog_preasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name_dialog"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Preasure: " />

    <TextView
        android:id="@+id/dialog_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_weatherIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="35dp"
        android:text="20ÂºC"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/dialog_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_preasure"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Humidity: " />

    <TextView
        android:id="@+id/dialog_uvIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_humidity"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="UV Index: " />

    <TextView
        android:id="@+id/dialog_feels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_uvIndex"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Feels like: " />



</RelativeLayout>