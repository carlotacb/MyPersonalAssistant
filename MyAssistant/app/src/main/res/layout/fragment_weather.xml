<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:background="#DDD"
    tools:context=".ui.WeatherFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/current_weather_card"
        app:cardElevation="7dp"
        app:cardMaxElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/city_name_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:fontFamily="monospace"
                android:text="City Name"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/current_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/city_name_current"
                android:src="@drawable/ic_near_me_black_24dp" />

            <ImageView
                android:id="@+id/current_weather_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp" />

            <TextView
                android:id="@+id/current_city_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_weather_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="monospace"
                android:text="XÂºC"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/future_temps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_name_current"
                android:layout_marginTop="18dp"
                android:overScrollMode="never"
                android:layout_marginEnd="40dp"
                android:layout_toStartOf="@+id/current_city_temperature" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

      <!-- <Button
        android:id="@+id/button_add_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_weather_card"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/ic_add"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Add city"
        android:textAllCaps="false"
        android:textSize="18dp" /> -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_weather_card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="341dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-29dp"
        android:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_add_white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/city_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_weather_card"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/weather_card" />

</RelativeLayout>